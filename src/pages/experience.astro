---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

import experienceData from '../data/experience.json';

const lang = 'en';
const experiences = experienceData.experience;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Experience - Your Name</title>
  <meta name="description" content="Professional experience in computer vision and software engineering">
</head>
<body>
  <Header lang="en" />

  <main class="container">
    <section class="section">
      <h1>Experience</h1>
      <p>
        Professional journey in computer vision, machine learning, and software development.
      </p>
    </section>

    <section class="section">
      <h2 class="section-title">Work History</h2>

      <div class="experience-timeline">
        {experiences.map((exp) => (
          <article class="experience-item">
            <h3>{exp.title[lang]}</h3>
            <div class="company-info">
              <strong>{exp.company}</strong>
            </div>
            <div class="period">{exp.period}</div>

            <ul>
              {exp.description[lang].map((item: string) => (
                <li>{item}</li>
              ))}
            </ul>

            <div class="tags">
              {exp.tags.map((tag) => (
                <span class="tag">{tag}</span>
              ))}
            </div>
          </article>
        ))}
      </div>
    </section>

    <section class="section">
      <h2 class="section-title">Skills & Technologies</h2>

      <div class="skills-grid">
        <div class="skill-category">
          <h3>Computer Vision</h3>
          <p class="text-mono">
            OpenCV · TensorFlow · PyTorch · ONNX · CUDA · Point Cloud Processing · SLAM · 3D Vision
          </p>
        </div>

        <div class="skill-category">
          <h3>Programming</h3>
          <p class="text-mono">
            Python · C++ · Rust · JavaScript · TypeScript · Go
          </p>
        </div>

        <div class="skill-category">
          <h3>ML/AI</h3>
          <p class="text-mono">
            Object Detection · Segmentation · Tracking · Model Optimization · Edge Deployment
          </p>
        </div>

        <div class="skill-category">
          <h3>DevOps & Tools</h3>
          <p class="text-mono">
            Docker · Kubernetes · AWS · Git · CI/CD · Linux
          </p>
        </div>
      </div>
    </section>

    <section class="section">
      <h2 class="section-title">Download CV</h2>
      <p>
        <a href="/cv/cv.pdf" download class="button">[Download PDF CV]</a>
      </p>
    </section>
  </main>

  <Footer lang="en" />
</body>
</html>

<style>
  .experience-timeline {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  .company-info {
    margin-bottom: 4px;
  }

  .skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 24px;
  }

  .skill-category {
    border: 1px solid var(--border);
    padding: 16px;
  }

  .skill-category h3 {
    margin-bottom: 12px;
    font-size: 18px;
  }

  .skill-category p {
    margin-bottom: 0;
    line-height: 1.6;
  }
</style>
