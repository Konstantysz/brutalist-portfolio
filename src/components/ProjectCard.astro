---
interface Props {
  title: string;
  description: string;
  tags: string[];
  github?: string;
  image?: string;
}

const { title, description, tags, github, image } = Astro.props;
---

<article class="project-card">
  <div class="project-image">
    {
      image ? (
        <img src={image} alt={title} />
      ) : (
        <div class="image-placeholder">[IMAGE]</div>
      )
    }
  </div>

  <h3>{title}</h3>

  <div class="tags">
    {tags.map((tag) => <span class="tag">{tag}</span>)}
  </div>

  <p>{description}</p>

  {
    github && (
      <div class="project-links">
        <a href={github} target="_blank" rel="noopener">
          [View on GitHub â†’]
        </a>
      </div>
    )
  }
</article>

<style>
  .project-image {
    margin-bottom: 16px;
    width: 100%;
  }

  .project-image img {
    width: 100%;
    height: auto;
    display: block;
    border: 1px solid var(--border);
  }

  .image-placeholder {
    width: 100%;
    height: 200px;
    border: 1px solid var(--border);
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: monospace;
    color: var(--text);
    background-color: var(--bg);
  }

  .project-links {
    margin-top: 12px;
  }

  .project-links a {
    font-weight: bold;
  }
</style>
